<Page
    x:Class="course_oop.Presentation.Views.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:course_oop.Presentation.Views"
    xmlns:local1="clr-namespace:course_oop.Presentation.ViewModels.Registration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:entities="clr-namespace:course_oop.Core.Entities"
    Title="RegistrationPage"
    d:DataContext="{d:DesignInstance Type=local1:MainViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid>


        <Canvas Panel.ZIndex="0">
            <Canvas.Background>
                <ImageBrush ImageSource="/Shared/res/Images/welcom_image.jpg" Stretch="UniformToFill" />
            </Canvas.Background>
        </Canvas>

        <ContentControl
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Panel.ZIndex="1"
            Content="{Binding CurentViewModel}">

            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type local1:LoginViewModel}">
                    <Border Style="{StaticResource FluentCardBorderStyle}">

                        <StackPanel
                            MinWidth="300"
                            Margin="5"
                            Orientation="Vertical">

                            <TextBlock
                                Margin="0,10,0,20"
                                Style="{StaticResource TitleTextBlockStyle}"
                                Text="Вход" />

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Email" />
                                <TextBox
                                    Grid.Row="1"
                                    Style="{StaticResource FluentTextBoxStyle}"
                                    Text="{Binding Email, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>


                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Password" />
                                <PasswordBox
                                    Grid.Row="1"
                                    PasswordChanged="SetPassword"
                                    Style="{StaticResource FluentPassBoxStyle}" />
                            </Grid>

                            <TextBlock Margin="0,0,0,20" HorizontalAlignment="Center">
                                <Hyperlink
                                    Command="{Binding SetUserRegistration}"
                                    Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                    TextDecorations="None">
                                    Нет аккаунта? Регистрация
                                </Hyperlink>
                            </TextBlock>


                            <Button
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                Command="{Binding Login}"
                                IsEnabled="{Binding IsButtonEnabled}"
                                Style="{DynamicResource AccentButtonStyle}">
                                Войти
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local1:UserRegistrationViewModel}">
                    <Border Style="{StaticResource FluentCardBorderStyle}">
                        <StackPanel
                            MinWidth="400"
                            Margin="5"
                            Orientation="Vertical">

                            <DockPanel
                                Margin="0,10,0,20"
                                HorizontalAlignment="Stretch"
                                LastChildFill="False">
                                <TextBlock
                                    DockPanel.Dock="Left"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    Text="Регистрация" />

                                <TextBlock VerticalAlignment="Center" DockPanel.Dock="Right">
                                    <Hyperlink
                                        Command="{Binding SetBuisnesRegistration}"
                                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                        TextDecorations="None">
                                        Для бизнеса
                                    </Hyperlink>
                                </TextBlock>
                            </DockPanel>


                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Имя" />
                                <TextBox
                                    Grid.Row="1"
                                    Style="{StaticResource FluentTextBoxStyle}"
                                    Text="{Binding Name, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Фамилия" />
                                <TextBox
                                    Grid.Row="1"
                                    Style="{StaticResource FluentTextBoxStyle}"
                                    Text="{Binding FirstName, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Email" />
                                <TextBox
                                    Grid.Row="1"
                                    Style="{StaticResource FluentTextBoxStyle}"
                                    Text="{Binding Email, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Телефон" />
                                <TextBox
                                    Grid.Row="1"
                                    Style="{StaticResource FluentTextBoxStyle}"
                                    Text="{Binding Phone, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Password" />
                                <PasswordBox
                                    Grid.Row="1"
                                    PasswordChanged="SetPassword"
                                    Style="{StaticResource FluentPassBoxStyle}" />
                            </Grid>

                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" Content="Repeat Password" />
                                <PasswordBox
                                    Grid.Row="1"
                                    PasswordChanged="SetRepeatPassword"
                                    Style="{StaticResource FluentRepeatPassBoxStyle}" />
                            </Grid>

                            <TextBlock Margin="0,0,0,20" HorizontalAlignment="Center">
                                <Hyperlink
                                    Command="{Binding SetLogin}"
                                    Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                    TextDecorations="None">
                                    Есть аккаунт? Вход
                                </Hyperlink>
                            </TextBlock>


                            <Button
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                Command="{Binding Register}"
                                IsEnabled="{Binding IsButtonEnabled}"
                                Style="{DynamicResource AccentButtonStyle}">
                                Регистрация
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>

                <DataTemplate DataType="{x:Type local1:BisnesRegistrationViewModel}">
                    <Border Style="{StaticResource FluentCardBorderStyle}">
                        <StackPanel
                            MinWidth="600"
                            Margin="5"
                            Orientation="Vertical">

                            <DockPanel
                                Margin="0,10,0,20"
                                HorizontalAlignment="Stretch"
                                LastChildFill="False">
                                <TextBlock
                                    DockPanel.Dock="Left"
                                    Style="{StaticResource TitleTextBlockStyle}"
                                    Text="Регистрация" />

                                <TextBlock VerticalAlignment="Center" DockPanel.Dock="Right">
                                    <Hyperlink
                                        Command="{Binding SetUserRegistration}"
                                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                        TextDecorations="None">
                                        Для Пользоватля
                                    </Hyperlink>
                                </TextBlock>
                            </DockPanel>

                            <Grid Margin="0,0,0,20" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    Margin="0,0,15,0"
                                    HorizontalAlignment="Stretch">
                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Имя" />
                                        <TextBox
                                            Grid.Row="1"
                                            Style="{StaticResource FluentTextBoxStyle}"
                                            Text="{Binding Name, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Фамилия" />
                                        <TextBox
                                            Grid.Row="1"
                                            Style="{StaticResource FluentTextBoxStyle}"
                                            Text="{Binding FirstName, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Password" />
                                        <PasswordBox
                                            Name="BisnessPass"
                                            Grid.Row="1"
                                            PasswordChanged="SetPassword"
                                            Style="{StaticResource FluentPassBoxStyle}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Repeat Password" />
                                        <PasswordBox
                                            Grid.Row="1"
                                            PasswordChanged="SetRepeatPassword"
                                            Style="{StaticResource FluentRepeatPassBoxStyle}" />
                                    </Grid>
                                </StackPanel>


                                <StackPanel
                                    Grid.Column="1"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Stretch">
                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Катгория заведения" />
                                        <ComboBox
                                            Grid.Row="1"
                                            Height="{Binding ElementName=BisnessPass, Path=ActualHeight}"
                                            FontSize="12"
                                            ItemsSource="{Binding Categories}"
                                            SelectedIndex="0"
                                            SelectedItem="{Binding Category}">

                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="{x:Type entities:Category}">
                                                    <TextBlock Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Номер в реестре" />
                                        <TextBox
                                            Grid.Row="1"
                                            Style="{StaticResource FluentTextBoxStyle}"
                                            Text="{Binding SallerId, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Email" />
                                        <TextBox
                                            Grid.Row="1"
                                            Style="{StaticResource FluentTextBoxStyle}"
                                            Text="{Binding Email, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Телефон" />
                                        <TextBox
                                            Grid.Row="1"
                                            Style="{StaticResource FluentTextBoxStyle}"
                                            Text="{Binding Phone, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                    </Grid>
                                </StackPanel>
                            </Grid>


                            <TextBlock Margin="0,0,0,20" HorizontalAlignment="Center">
                                <Hyperlink
                                    Command="{Binding SetLogin}"
                                    Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                    TextDecorations="None">
                                    Есть аккаунт? Вход
                                </Hyperlink>
                            </TextBlock>


                            <Button
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"
                                Command="{Binding Register}"
                                IsEnabled="{Binding IsButtonEnabled}"
                                Style="{DynamicResource AccentButtonStyle}">
                                Подать заявку
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>

            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Page>