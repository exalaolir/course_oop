<Page
    x:Class="course_oop.Presentation.Views.Saller.ShowcasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:course_oop.Presentation.ViewModels.Components"
    xmlns:entities="clr-namespace:course_oop.Core.Entities"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:course_oop.Presentation.Views.Saller"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sallerspart="clr-namespace:course_oop.Presentation.ViewModels.SallersPart"
    xmlns:converters="clr-namespace:course_oop.Presentation.Converters"
    Title="ShowcasePage"
    d:DataContext="{d:DesignInstance Type=sallerspart:ShowcaseViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource BaseFluentPageStyle}"
    mc:Ignorable="d">

    <Page.Resources>

        <converters:BoolToVisibleConverter x:Key="BoolToVisibleConverter" />
        <converters:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter" />

        <DataTemplate x:Key="WideTemplate">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <StackPanel
                    Grid.Column="0"
                    Width="400"
                    Orientation="Vertical">


                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Text="Информация" />
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Название" />
                        <TextBox
                            Grid.Row="1"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Name, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>


                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Адрес" />
                        <TextBox
                            Grid.Row="1"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Adress, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Описание" />
                        <TextBox
                            Grid.Row="1"
                            Height="300"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Description, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource SubtitleTextBlockStyle}">
                            <Run Text="Фото: " />
                            <Run Text="{Binding ImageCounter}" />
                            <Run Text="/6" />
                        </TextBlock>
                        <Button
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Command="{Binding AddImage}"
                            IsEnabled="{Binding ImageBlocker}"
                            Style="{DynamicResource AccentButtonStyle}">
                            Добавить
                        </Button>
                    </Grid>

                    <Button
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding SetShopsData}"
                        Content="{Binding AddBtnText}"
                        IsEnabled="{Binding IsButtonEnabled}"
                        Style="{DynamicResource AccentButtonStyle}" />

                </StackPanel>

                <Border
                    Grid.Column="1"
                    Margin="10"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    ClipToBounds="True"
                    CornerRadius="6">

                    <ItemsControl x:Name="ImagesGrid" ItemsSource="{Binding Images}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type components:ImagePreview`1}">
                                <Border
                                    Grid.Column="1"
                                    Margin="10"
                                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                    BorderBrush="Transparent"
                                    BorderThickness="4"
                                    ClipToBounds="True"
                                    CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" MaxHeight="410" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>

                                        <Image
                                            Grid.Row="0"
                                            MaxWidth="518px"
                                            HorizontalAlignment="Center"
                                            Source="{Binding Path}"
                                            Stretch="UniformToFill" />
                                        <Button
                                            Grid.Row="1"
                                            Margin="5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Command="{Binding DeleteCommand}"
                                            Style="{DynamicResource AccentButtonStyle}">
                                            Удалить
                                        </Button>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SmallTemplate">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="400"
                    Margin="10"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        Style="{StaticResource TitleTextBlockStyle}"
                        Text="Информация" />
                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Название" />
                        <TextBox
                            Grid.Row="1"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Name, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                    </Grid>


                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Адрес" />
                        <TextBox
                            Grid.Row="1"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Adress, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Описание" />
                        <TextBox
                            Grid.Row="1"
                            Height="300"
                            Style="{StaticResource FluentTextBoxStyle}"
                            Text="{Binding Description, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                    </Grid>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Style="{StaticResource SubtitleTextBlockStyle}">
                            <Run Text="Фото: " />
                            <Run Text="{Binding ImageCounter}" />
                            <Run Text="/6" />
                        </TextBlock>
                        <Button
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            Command="{Binding AddImage}"
                            IsEnabled="{Binding ImageBlocker}"
                            Style="{DynamicResource AccentButtonStyle}">
                            Добавить
                        </Button>
                    </Grid>

                    <Button
                        Margin="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding SetShopsData}"
                        Content="{Binding AddBtnText}"
                        IsEnabled="{Binding IsButtonEnabled}"
                        Style="{DynamicResource AccentButtonStyle}" />
                </StackPanel>

                <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                    BorderBrush="Transparent"
                    BorderThickness="1"
                    ClipToBounds="True"
                    CornerRadius="6">

                    <ItemsControl x:Name="ImagesGrid" ItemsSource="{Binding Images}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" Rows="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type components:ImagePreview`1}">
                                <Border
                                    Grid.Column="1"
                                    Margin="10"
                                    Background="{DynamicResource CardBackgroundFillColorSecondaryBrush}"
                                    BorderBrush="Transparent"
                                    BorderThickness="4"
                                    ClipToBounds="True"
                                    CornerRadius="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" MaxHeight="410" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>

                                        <Image
                                            Grid.Row="0"
                                            HorizontalAlignment="Center"
                                            Source="{Binding Path}"
                                            Stretch="UniformToFill" />
                                        <Button
                                            Grid.Row="1"
                                            Margin="5"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Bottom"
                                            Command="{Binding DeleteCommand}"
                                            Style="{DynamicResource AccentButtonStyle}">
                                            Удалить
                                        </Button>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ScrollViewer>
            <ContentControl Content="{Binding}"
                            Visibility="{Binding DataLoaded, Converter={StaticResource BoolToVisibleConverter}}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsWideView}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource WideTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsWideView}" Value="False">
                                <Setter Property="ContentTemplate" Value="{StaticResource SmallTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </ScrollViewer>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical"
            Visibility="{Binding DataLoaded, Converter={StaticResource InverseBoolToVisibleConverter}}">

            <TextBlock
                Margin="0,0,0,15"
                HorizontalAlignment="Center"
                Text="{Binding LoadingMsg}"
                TextAlignment="Center" />
            <ProgressBar Width="300" IsIndeterminate="True" />
        </StackPanel>
    </Grid>
</Page>